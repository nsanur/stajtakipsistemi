@using (Html.BeginForm("Kaydet", "Stajyer", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Departman)
        @Html.TextBoxFor(m => m.Departman, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Soyad)
        @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefon)
        @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BaslamaTarihi)
        @Html.TextBoxFor(m => m.BaslamaTarihi,"{0:yyyy-MM-dd}", new { @class = "form-control", type="date"})
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-success">Kaydet</button>
}