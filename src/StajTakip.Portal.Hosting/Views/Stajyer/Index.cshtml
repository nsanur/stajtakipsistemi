@using StajTakip.Data.Entities
@model List<Stajyer>

@{
    ViewBag.Title = "Index";
}

@*<a class=" btn btn-success" href="/Stajyer/Kaydet">Yeni Stajyer Ekle</a>*@
@Html.ActionLink("Yeni Stajyer Ekle", "Yeni","Stajyer", null, new {@class="btn btn-success"})
@Html.ActionLink("Excel Listesini İndir","ExportStaticExcelList","Stajyer",null, new{@class="btn btn-primary"})

<h2>Stajyer Listesi</h2>
<table class="table table-bordered" id="tblStajyerler">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>TC No</th>
            <th>Departman</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Telefon</th>
            <th>Başlama Tarihi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Stajyer in Model)
        {
        <tr>
                @*<td>@Stajyer.Id</td>*@
            <td>@Stajyer.TcNo</td>
            <td>@Stajyer.Departman</td>
            <td>@Stajyer.Ad</td>
            <td>@Stajyer.Soyad</td>
            <td>@Stajyer.Telefon</td>
                <td>@Stajyer.BaslamaTarihi.Value.ToString("yyyy-MM-dd")</td>

            <td>@Html.ActionLink("Güncelle", "Guncelle", new { id = Stajyer.Id }, new { @class = "btn btn-primary" })</td>
            @*<td>@Html.ActionLink("Sil", "Sil", new { id = Stajyer.Id }, new { @class = "btn btn-danger btnStajyerSil" })</td>*@
                <td><a class="btn btn-danger btnStajyerSil" data-id="@Stajyer.Id" >Sil</a></td>
                

            @*<td><a class="btn btn-primary" href="/Stajyer/Guncelle/@Stajyer.Id">Güncelle</a></td>
        <td><a class="btn btn-danger" href="/Stajyer/Sil/@Stajyer.Id">Sil</a></td>*@
        </tr>

        }


    </tbody>
</table>

